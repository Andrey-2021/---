<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="border-top footer text-muted">
        <div align="center" class="container">
            <h3>Сайт анкетирования</h3>
            <a asp-area="" asp-controller="Home" asp-action="index">На главную страницу</a>
        </div>
        <div align="center">
            @*<a href="@Url.Action("Login", "Account")">Вход</a>*@
            <a asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
            <a asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
            <a asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
        </div>
        
        @if (User.Identity.IsAuthenticated)
        {
            <div align="center" style="color:coral">Вы вошли как: @User.Identity.Name</div>
        }
        else
        {
        <div align="center" style="color:coral">Неавторизованный пользователь</div>    
        }

        <hr style="border: 2px solid blue;" />
    </header>
    
  @*  <div class="container">
        <main role="main" class="pb-3">
            <div style="margin-bottom:100px">
            @RenderBody()
            </div>
        </main>
    </div>*@

    <main class="container">
        <div style="margin-bottom:100px">
        @RenderBody()
        </div>
    </main>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Анкетирование - <a asp-area="" asp-controller="Home" asp-action="Privacy">Войти</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>
