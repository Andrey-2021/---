@model WebApplication1.ViewModels.RegisterModel
 
<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Name">Введите Имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>

        <div>
            <label asp-for="Age">Введите Ваш возраст</label><br />
            <input type="text" asp-for="Age" />
            <span asp-validation-for="Age" />
        </div>

        <div>
            <label asp-for="Login">Введите Login</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>

         
        
        <div>
            <label asp-for="GroupId">Выберите группу</label><br />

            <select asp-for="GroupId">
                @foreach (var item in ViewBag.GroupsList)
                {
                    <option value=@item.Id>@item.Name</option>
                }
            </select>
            <span asp-validation-for="GroupId" />
        </div>


        <div>
            <input type="submit" value="Регистрация" style="margin:5px; padding:1px"/>
        </div>
    </div>
</form>